# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/cms"

# Redis
REDIS_URL="redis://localhost:6379"

# Auth Secrets (IMPORTANT: Change these in production!)
SESSION_SECRET="your-super-secret-session-key-minimum-32-characters-long"
OTP_SECRET="your-otp-secret-minimum-16-characters"
CSRF_SECRET="your-csrf-secret-minimum-32-characters"

# Email (SMTP) - Configure your SMTP provider
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_NAME="CMS Admin"
SMTP_FROM_EMAIL="admin@yourdomain.com"

# Midtrans Payment Gateway
MIDTRANS_SERVER_KEY="your-midtrans-server-key"
MIDTRANS_CLIENT_KEY="your-midtrans-client-key"
MIDTRANS_ENV="sandbox"  # Use "production" for live

# Application
NODE_ENV="development"
APP_URL="http://localhost:3000"
